{
  "name": "portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node server",
    "build": "tsc && pnpm build:client && pnpm build:server",
    "build:netlify": "vite build",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.tsx",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "deploy:netlify": "pnpm run build:netlify && ntl deploy --prod --dir=dist",
    "deploy": "pnpm build && rsync -avz -e ssh --delete --progress dist/ antonis@fsfe:/var/www/app/dist",
    "serve": "NODE_ENV=production node server"
  },
  "dependencies": {
    "@types/gsap": "^3.0.0",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "gsap": "^3.12.2",
    "netlify-cli": "^16.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.68.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}